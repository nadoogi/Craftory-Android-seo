<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/filter_all_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/button_radius_5dp_whitegray_for_filter"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/filter_all_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icon_filter_all" />

        <TextView
            android:id="@+id/filter_all_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="전체"
            android:textColor="@color/filter_button_default"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_post_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/button_radius_5dp_whitegray_for_filter"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/filter_post_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icon_filter_post" />

        <TextView
            android:id="@+id/filter_post_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="일러스트"
            android:textColor="@color/filter_button_default"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/filter_webtoon_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_weight="1"
        android:background="@drawable/button_radius_5dp_whitegray_for_filter"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/filter_webtoon_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/icon_filter_webtoon" />

        <TextView
            android:id="@+id/filter_webtoon_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="웹툰"
            android:textColor="@color/filter_button_default"
            android:textSize="10sp" />
    </LinearLayout>

