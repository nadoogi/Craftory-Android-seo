<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cloud.scalabl.httpspg_app_q0nz5d8azjwlxxrweewghhzuexr7rc.anicast.FundingMarketCategoryActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/category_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/image_background_1px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#50000000"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/category_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/category_tabs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#FFFFFF"
                app:tabIndicatorColor="@color/basic_point_color"
                app:tabPadding="5dp"
                app:tabSelectedTextColor="@color/basic_point_color"
                app:tabTextAppearance="@style/CustomTabText"
                app:tabTextColor="@color/timeline_text_color_2" />

            <LinearLayout
                android:id="@+id/category_tabs_divider"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d7d7d7"
                android:orientation="vertical" />

            <android.support.v4.view.ViewPager
                android:id="@+id/category_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f0f0f0" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
